{
	"name": "hono-starter",
	"version": "1.0.0",
	"description": "Hono API framework starter with Bun runtime",
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target node --minify",
		"start": "bun dist/index.js",
		"start:prod": "NODE_ENV=production bun dist/index.js",
		"clean": "rm -rf dist",
		"type-check": "bun tsc --noEmit",
		"lint": "biome lint --write",
		"lint:check": "biome lint",
		"format": "biome format --write",
		"format:check": "biome format",
		"docker:build": "docker build -t hono-starter .",
		"docker:run": "docker run -p 8080:8080 hono-starter",
		"prepare": "husky"
	},
	"main": "dist/index.js",
	"keywords": ["hono", "api", "bun", "typescript", "openapi", "scalar"],
	"author": "",
	"license": "MIT",
	"engines": {
		"bun": ">=1.0.0"
	},
	"dependencies": {
		"@hono/zod-openapi": "^1.1.4",
		"@scalar/hono-api-reference": "^0.9.23",
		"hono": "^4.10.4",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.3.1",
		"husky": "^9.1.7"
	}
}
