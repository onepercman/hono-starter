{
  "name": "hono-starter",
  "version": "1.0.0",
  "description": "Hono API framework starter with Bun runtime",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "start": "bun dist/index.js",
    "start:prod": "NODE_ENV=production bun dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "bun tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docker:build": "docker build -t hono-starter .",
    "docker:run": "docker run -p 8080:8080 hono-starter"
  },
  "main": "dist/index.js",
  "keywords": [
    "hono",
    "api",
    "bun",
    "typescript",
    "openapi",
    "scalar"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.4",
    "@scalar/hono-api-reference": "^0.9.23",
    "hono": "^4.10.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-plugin-eslint-plugin": "^7.2.0",
    "globals": "^16.5.0",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript-eslint": "^8.46.3"
  }
}
